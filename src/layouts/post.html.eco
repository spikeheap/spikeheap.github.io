---
layout: default
---

<article>
	<header>
		<h1><%= @document.title %></h1>
		<p>&raquo;Published: <time pubdate="pubdate"><%= @document.date.toDateString() %></time></p>
	</header>

	<div class="post-content"><%- @content %></div>

	<div class="social-buttons"><%- @getSocialButtons() %></div>
	<div>
		<h2>Comments</h2>
		<%- @getDisqus() %>
	</div>
</article>

